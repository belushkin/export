{% extends 'base.html.twig' %}

{% block title %}Export form{% endblock %}

{% block body %}
    <div id="container" class="container w-25 mt-5">
        <h1 class="h3 mb-3 font-weight-normal">Export form:</h1>
        {{ form_start(exportForm) }}
        <div class="form-group">
            {{ form_errors(exportForm.email) }}
        </div>

        <div class="form-group">
            {{ form_label(exportForm.type) }}
            {{ form_widget(exportForm.type) }}
        </div>
        <div class="form-group">
            {{ form_label(exportForm.email) }}
            {{ form_widget(exportForm.email) }}
        </div>
        <input class="btn btn-primary" type="submit">
        {{ form_end(exportForm) }}
    </div>
{% endblock %}
